    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            "name": "Launch Frontend (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend/src",
            "preLaunchTask": "npm: dev"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Bulk Historical Data Fetcher",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "/Users/nolojik/Documents/logdhan-app/backend/bulk-historical-data-fetcher.js",
            "envFile": "/Users/nolojik/Documents/logdhan-app/backend/.env",
            "console": "integratedTerminal",
            "cwd": "/Users/nolojik/Documents/logdhan-app/backend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "prefetchAllStockData",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "/Users/nolojik/Documents/logdhan-app/backend/src/scripts/prefetchAllStockData.js",
            "args": ["--batch-size", "5"],
            "envFile": "/Users/nolojik/Documents/logdhan-app/backend/.env",
            "console": "integratedTerminal",
            "cwd": "/Users/nolojik/Documents/logdhan-app/backend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Cleanup Old Agenda Jobs",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "/Users/nolojik/Documents/logdhan-app/backend/cleanup-old-agenda-jobs.js",
            "envFile": "/Users/nolojik/Documents/logdhan-app/backend/.env",
            "console": "integratedTerminal",
            "cwd": "/Users/nolojik/Documents/logdhan-app/backend"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Weekend Screening Test (Dry Run)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/scripts/testWeekendScreening.js",
            "args": ["--dry-run"],
            "envFile": "${workspaceFolder}/backend/.env",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "type": "node",
            "request": "launch",
